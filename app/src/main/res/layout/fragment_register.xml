<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterFrag"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ברוכים הבאים!"
        android:textSize="28dp"
        android:textColor="@color/lightblue"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הרשמה:"
        android:textSize="20dp"
        android:textColor="@color/darkblue"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_marginTop="100dp"
        android:id="@+id/fullName_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="שם מלא"
        android:inputType="text"
        android:textAlignment="center"
        android:background="@drawable/edittext_background" />
    <TextView
        android:id="@+id/fullName_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helper text"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="כתובת מייל"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:background="@drawable/edittext_background" />

    <TextView
        android:id="@+id/email_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helper text"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:hint="סיסמא"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:background="@drawable/edittext_background" />

            <EditText
                android:id="@+id/passwordval_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:hint="וידוא סיסמא"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:background="@drawable/edittext_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/password_helper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Helper text"
                android:textColor="#FF0000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/passwordval_helper"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Helper text"
                android:textColor="#FF0000"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Continued_button"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@drawable/button_background"
        android:text="המשך"
        android:textSize="20dp" />



</LinearLayout>